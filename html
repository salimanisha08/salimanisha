<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stones List</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div id="stones-list"></div>

  <script>
    fetch('/stones')
      .then(response => response.json())
      .then(data => {
        const stonesList = document.getElementById('stones-list');
        data.forEach(stone => {
          const stoneElement = document.createElement('div');
          stoneElement.innerHTML = `
            <h2>${stone.name}</h2>
            <p><strong>Color:</strong> ${stone.color}</p>
            <p><strong>Description:</strong> ${stone.description}</p>
            <hr>
          `;
          stonesList.appendChild(stoneElement);
        });
      })
      .catch(error => console.error('Error fetching data:', error));
  </script>
</body>
</html>